{
    "preset": "ts-jest",
    "transform": {
        "^.+\\.(ts|tsx|js|jsx)?$": "ts-jest"
    },
    "testMatch": [
        "**/tests/*.test.ts"
    ],
    "testEnvironment": "node",
    "moduleFileExtensions": [
        "ts",
        "tsx",
        "js",
        "jsx",
        "json",
        "node"
    ],
    "transformIgnorePatterns": [
        "node_modules/(?!@digitalbazaar/vc)"
    ]
}